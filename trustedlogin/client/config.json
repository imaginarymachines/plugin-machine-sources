{
    "builder": {
        "id": "trustedlogin-client",
        "label": "Trusted Login Client",
        "includePaths": [
            "src/"
        ],
        "originalNamespace": "TrustedLogin",
        "groups": [
            {
                "id": "vendor",
                "label": "Vendor Info",
                "order": "1",
                "description": "The vendor information",
                "link": "https://docs.trustedlogin.com/Client/configuration",
                "fields": [
                    "vendor.namespace",
                    "vendor.title",
                    "vendor.email",
                    "vendor.website",
                    "vendor.support_url"
                ]
            },
            {
                "id": "auth",
                "label": "Auth",
                "order": "2",
                "description": "The Public API key for the TrustedLogin API.",
                "link": "https://docs.trustedlogin.com/Client/configuration",
                "fields": [
                    "auth.api_key"
                ]
            },
            {
                "id": "role",
                "label": "Role",
                "order": "3",
                "description": "The role to assign to the user.",
                "link": "https://docs.trustedlogin.com/Client/configuration",
                "fields": [
                    "role"
                ]
            },
            {
                "id": "php",
                "label": "PHP",
                "order": "4",
                "description": "PHP Namespace for the package.",
                "link": "https://docs.trustedlogin.com/Client/configuration",
                "fields": [
                    "php.namespace"
                ]
            }
        ],
        "fields": [
            {
                "id": "php.namespace",
                "name": "php.namespace",
                "label": "PHP Namespace",
                "type": "text",
                "fieldType": "input",
                "defaultValue": null,
                "description": "The PHP namespace for the package",
                "options": [],
                "required": true,
                "rules": "camel"
            },
            {
                "id": "auth.api_key",
                "name": "auth.api_key",
                "label": "TrustedLogin Public Key",
                "type": "text",
                "fieldType": "input",
                "defaultValue": null,
                "description": "The API key for the TrustedLogin API",
                "options": [],
                "required": true,
                "rules": "lowercase|alpha_num"
            },
            {
                "id": "vendor.namespace",
                "name": "vendor.namespace",
                "label": "Vendor Namespace",
                "type": "text",
                "fieldType": "input",
                "defaultValue": null,
                "description": "Slug for vendor. Must be unique. Must be shorter than 96 characters. Must not be a reserved namespace: trustedlogin, client, vendor, admin, wordpress.",
                "options": [],
                "required": true,
                "rules": "lowercase|alpha_dash"
            },
            {
                "id": "vendor.title",
                "name": "vendor.title",
                "label": "Title",
                "type": "text",
                "fieldType": "input",
                "defaultValue": null,
                "description": "Name of the vendor company. Used in text such as Visit the %s website",
                "options": [],
                "required": true
            },
            {
                "id": "vendor.email",
                "name": "vendor.email",
                "label": "Email",
                "type": "email",
                "fieldType": "input",
                "defaultValue": null,
                "link": "https://docs.trustedlogin.com/Client/configuration#email-hash",
                "description": "Email address for support. Used when creating usernames. Recommended: use {hash} dynamic replacement ",
                "options": [],
                "required": true,
                "rules": "email"
            },
            {
                "id": "vendor.website",
                "name": "vendor.website",
                "label": "Website",
                "type": "url",
                "fieldType": "input",
                "defaultValue": null,
                "description": "URL to the vendor support page. Shown to users in the Grant Access form and also serves as a backup to redirect users if the TrustedLogin server is unreachable. Must be a valid URL.",
                "options": [],
                "required": true,
                "rules": "url"
            },
            {
                "id": "vendor.support_url",
                "name": "vendor.support_url",
                "label": "Support URL",
                "type": "url",
                "fieldType": "input",
                "defaultValue": null,
                "description": "",
                "options": [],
                "required": true,
                "rules": "url"
            },
            {
                "id": "role",
                "name": "role",
                "label": "Role",
                "type": "select",
                "defaultValue": "editor",
                "description": "",
                "options": [
                    {
                        "value": "editor",
                        "label": "Editor"
                    },
                    {
                        "value": "admin",
                        "label": "Administrator"
                    }
                ],
                "required": true,
                "rules": "in:editor,admin"
            }
        ]
    }
}
